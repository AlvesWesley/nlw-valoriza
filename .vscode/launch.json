{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "All tests",
      "type": "node",
      "request": "launch",
      "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
      "stopOnEntry": false,
      "args": [
        "--require",
        "ts-node/register",
        "--require",
        "dotenv/config",
        "--no-timeouts",
        "--colors",
        "--exit",
        "${workspaceFolder}/tests/**/*.test.ts"
      ],
      "cwd": "${workspaceRoot}",
      "runtimeExecutable": null,
      "env": {
        "NODE_ENV": "test"
      }
    },
    {
      "name": "Services",
      "type": "node",
      "request": "launch",
      "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
      "stopOnEntry": false,
      "args": [
        "--require",
        "ts-node/register",
        "--require",
        "dotenv/config",
        "--no-timeouts",
        "--colors",
        "--exit",
        "${workspaceFolder}/tests/unit/services/**/*.test.ts"
      ],
      "cwd": "${workspaceRoot}",
      "runtimeExecutable": null,
      "env": {
        "NODE_ENV": "test"
      }
    }
  ]
}
